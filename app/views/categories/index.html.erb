
<h1 align="center">Listing All Categories</h1>
<div align="center">
  <%= will_paginate %>
  <% @categories.each do |category| %>
    <div class="card" style="width: 18rem; margin-top:15px;">
      <div class="card-body">
        <h5 class="card-title"><%= link_to "#{category.name}", category_path(category) %></h5>
      </div>
    </div>
  <% end %>
  <%= will_paginate %>
</div>