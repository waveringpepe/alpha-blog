<h1 align="center">Sign up for 5 Roots</h1><br/>
<%= render 'shared/errors', obj: @user %>
<div class='form'>
  <div class='col-xs-12'>
    <%= form_for(@user,:html => {class: "form-horizontal", role: "form"}) do |f| %>
      <div class="form-group row">
        <div class="col-sm-2 col-form-label">
          <%= f.label :username %>
        </div>
        <div class="col-sm-10">
          <%= f.text_field :username, class: "form-control", placeholder: "Enter username", autofocus:true %>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-form-label col-sm-2">
          <%= f.label :email %>
        </div>
        <div class="col-sm-10">
          <%= f.email_field :email, class: "form-control", placeholder: "Enter your E-mail" %>
        </div>
      </div>
       <div class="form-group row">
        <div class="col-form-label col-sm-2">
          <%= f.label :password %>
        </div>
        <div class="col-sm-10">
          <%= f.password_field :password, class: "form-control", placeholder: "Enter your password" %>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-sm-10  col-sm-offset-2">
          <%= f.submit value:"Sign up", class:"btn btn-primary btn-lg" %>
        </div>
      </div>
    <% end %>
    <div class="col-xs-4 col-xs-offset-4 center">
       [ <%= link_to "Cancel request and return to articles listing", articles_path %> ]
    </div>
  </div>
</div>
