<h1 align="center">All 5 Roots Bloggers</h1>
<div align="center">
  <%= will_paginate %>
  <% @users.each do |user| %>
    <div class="card" style="width: 18rem; margin-top:15px;">
      <div class="card-body">
        <h5 class="card-title"><%= link_to gravatar_for(user), user_path(user) %></h5>
        <p class="card-text"><%= link_to user.username, user_path(user) %></p>
        <small><%= pluralize(user.articles.count, "article") if user.articles %></small>
      </div>
    </div>
<% end %>
</div>
